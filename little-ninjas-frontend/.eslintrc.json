{
    "extends": [
        "react-app",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1,
                "ObjectExpression": 1
            }
        ],
        /* "quotes": [
            2,
            "single"
        ],
        "jsx-quotes": [
            2,
            "prefer-single"
        ], */
        "semi": [
            2,
            "always"
        ],
        "func-style": [
            1,
            "expression"
        ],
        "no-multiple-empty-lines": [
            2,
            {
                "max": 1
            }
        ],
        "arrow-body-style": [
            2,
            "as-needed"
        ],
        "react/prop-types": [
            0
        ],
        "react-hooks/exhaustive-deps": [
            0
        ],
        "react/no-redundant-should-component-update": [
            2
        ],
        "react/no-typos": [
            2
        ],
        "react/no-this-in-sfc": [
            2
        ],
        "react/no-unescaped-entities": [
            2
        ],
        "react/no-unknown-property": [
            2
        ],
        "react/no-unsafe": [
            2
        ],
        "react/no-unused-state": [
            2
        ],
        "react/no-will-update-set-state": [
            2
        ],
        "react/prefer-stateless-function": [
            1
        ],
        "react/self-closing-comp": [
            1
        ],
        "react/jsx-no-bind": [
            1
        ],
        "react/jsx-fragments": [
            1,
            "syntax"
        ],
        "react/jsx-pascal-case": [
            2
        ],
        "react/sort-comp": [
            2,
            {
                "order": [
                    "instance-variables",
                    "static-variables",
                    "static-methods",
                    "lifecycle",
                    "render",
                    "everything-else"
                ],
                "groups": {
                    "instance-variables": [
                        "state"
                    ]
                }
            }
        ]
    },
    "env": {
        "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    }
}